<div id="home" v-cloak>
    <div id="home-container" class="container-lg">
        <div id="home-info" class="row">
            <div id="home-text" class="text-center">
                <h1>Television Binge</h1>
                <h3>Find your next adventure...</h3>
            </div>
            <form class="d-flex">
                <input id="search-input" class="form-control me-2" type="search" placeholder="" aria-label="Search" v-model="searchTerm">
                <button id="search-button" class="btn btn-light my-2 my-sm-0" type="button" v-on:click="search()">Search</button>
            </form>
        </div>
        <div class="row row-cols-1 row-cols-md-2 g-4">
            <div class="col">
                <ul class="list-group">
                    <li class="list-group-item">Most Popular Shows Now</li>
                    <li class="list-group-item" v-for="(show,index) in mostPopular">
                        <div class="row">
                            <div class="col-8">
                                {{ show.rank }}. <a :href="'@Url.Action("Show", "TVB")?id=' + show.id" class="text-decoration-none text-reset">{{ show.title }}</a> ({{ show.year }})
                            </div>
                            <div class="col-4">
                                <div id="rankColors">
                                    <div v-if="show.rankUpDown.includes('+')" id="rankColorsGreen">
                                        <i id="rankColorsGreen" class="fa fa-angle-up"></i> <strong>{{show.rankUpDown}}</strong>
                                    </div>
                                    <div v-else-if="show.rankUpDown.includes('-')" id="rankColorsRed">
                                        <i id="rankColorsRed" class="fa fa-angle-down"></i> <strong>{{show.rankUpDown}}</strong>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                    </li>
                </ul>
            </div>
            <div class="col">
                <ul class="list-group">
                    <li class="list-group-item">Top 250 Shows</li>
                    <li class="list-group-item" v-for="(show,index) in top250">
                            {{ show.rank }}. <a :href="'@Url.Action("Show", "TVB")?id=' + show.id" class="text-decoration-none text-reset">{{ show.title }}</a> ({{ show.year }})
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="~/js/home.js" asp-append-version="true"></script>
}