<div id="home" v-cloak>
    <div id="homepage" class="container-lg">
        <div v-if="loading">
            <div class="row d-flex justify-content-center">
                <img src="@Url.Content("~/images/loading.gif")" alt="loading"/>
            </div>
        </div>
        <div v-else>
            <div id="home-info" class="row">
                <form class="d-flex">
                    <input id="searchbox" class="form-control me-2" type="search" placeholder="Search" aria-label="Search" v-model="searchTerm">
                    <button id="searchSubmit" class="btn btn-light my-2 my-sm-0" type="button" v-on:click="search()">Search</button>
                </form>
            </div>
            <div class="row row-cols-1 row-cols-md-2 g-4">
                <div class="col">
                    <ul class="list-group">
                        <li class="list-group-item list-group-item-dark">Most Popular Shows Now</li>
                        <li class="list-group-item" v-for="(show,index) in mostPopular">
                            <div class="row">
                                <div class="col-8">
                                    {{ show.rank }}. <a :href="'@Url.Action("Show", "TVB")?id=' + show.id" class="text-decoration-none text-reset">{{ show.title }}</a> ({{ show.year }})
                                </div>
                                <div class="col-4">
                                    <div id="rankColors">
                                        <div v-if="show.rankUpDown.includes('+')" id="rankColorsGreen">
                                            <i id="rankColorsGreen" class="fa fa-angle-up"></i> <strong>{{show.rankUpDown}}</strong>
                                        </div>
                                        <div v-else-if="show.rankUpDown.includes('-')" id="rankColorsRed">
                                            <i id="rankColorsRed" class="fa fa-angle-down"></i> <strong>{{show.rankUpDown}}</strong>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                        </li>
                    </ul>
                </div>
                <div class="col">
                    <ul class="list-group">
                        <li class="list-group-item list-group-item-dark">Top 250 Shows</li>
                        <li class="list-group-item" v-for="(show,index) in top250">
                                {{ show.rank }}. <a :href="'@Url.Action("Show", "TVB")?id=' + show.id" class="text-decoration-none text-reset">{{ show.title }}</a> ({{ show.year }})
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="~/js/home.js" asp-append-version="true"></script>
}